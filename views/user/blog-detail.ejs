<!DOCTYPE html>
<html lang="tr">
<head>
	<%- include("../partials/head") %>
</head>
<body>

	<%- include("../partials/header") %>
	
	<div class="mt-150 mb-150">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<h1 class="fs-5 text-center"><%= blog.title %></h1>
					<div class="single-article-section">
						<div class="single-article-text">
							<div class="single-artcile-bg"><img style="height: 600px"src="/static/assets/img/blog-image/<%= blog.image %>" alt=""></div>
							<p class="blog-meta">
								<span class="author"><i class="fas fa-user"></i> Admin</span>
								<span class="date"><i class="fas fa-calendar"></i><%= blog.createdAt %></span>
							<%- blog.description %>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	</div>
	<%- include("../partials/footer") %>
	
	<%- include("../partials/script") %>
</body>
</html>