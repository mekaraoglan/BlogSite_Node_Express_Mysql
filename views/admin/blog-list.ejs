<!DOCTYPE html>
<html lang="tr">

<head>
    <%- include("../partials/head") %>

</head>

<body>

    <%- include("../partials/header") %>

        <div class="container" style="margin-top: 120px">
            <h2 class="mb-4">Blog List</h2>
            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>Blog Name</th>
                            <th class="text-end" style="width: 200px">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% blogs.forEach(blog=> { %>
                            <tr>
                                <td>
                                    <%= blog.title %>
                                </td>
                                <td class="text-end">
                                    <a href="/admin/blog-edit/<%= blog.id %>"><button style="width: 60px;"
                                            class="btn btn-primary btn-sm me-2">Edit</button></a>
                                    <form action="/admin/blog-delete/<%= blog.id %>" method="POST" class="d-inline"
                                        onsubmit="return confirm('Are you sure you want to delete this blog?');">
                                        <button style="width: 60px;" type="submit"
                                            class="btn btn-danger btn-sm">Delete</button>
                                    </form>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
        </div>

        <%- include("../partials/footer") %>

            <%- include("../partials/script") %>

</body>

</html>